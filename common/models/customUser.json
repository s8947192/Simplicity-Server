{
  "name": "CustomUser",
  "base": "User",
  "idInjection": true,
  "options": {
    "validateUpsert": true
  },
  "properties": {
    "email": {
      "type": "string",
      "required": true
    },
    "password": {
      "type": "string",
      "required": true
    },
    "registrationDate": {
      "type": "date",
      "required": true,
      "default": "$now"
    },
    "firstName": {
      "type": "string"
    },
    "lastName": {
      "type": "string"
    }
  },
  "validations": [],
  "relations": {
    "language": {
      "type": "belongsTo",
      "model": "Language",
      "foreignKey": ""
    },
    "subscriptions": {
      "type": "hasMany",
      "model": "Subscription",
      "foreignKey": "",
      "through": "UserSubscriptions"
    },
    "paymentSources": {
      "type": "hasMany",
      "model": "PaymentSource",
      "foreignKey": "",
      "through": "UserPaymentSources"
    }
  },
  "acls": [
    {
      "accessType": "READ",
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "ALLOW"
    },
    {
      "accessType": "WRITE",
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "ALLOW"
    }
  ],
  "methods": {}
}
